{
    "training": {
        "total_timesteps": 1000000,
        "ppo_policy": "MultiInputPolicy",
        "verbose": 1
    },
    "evaluation": {
        "n_eval_episodes": 100,
        "n_video_episodes": 4,
        "deterministic": true
    },
    "environment": {
        "max_steps": 500,
        "multipliers": {
            "linear": 4.0,
            "rx": 0.5,
            "rz": 0.5
        },
        "ellipse_scale_factor": 0.5,
        "rewards": {
            "success": 1000.0,
            "fail_grip": -30.0,
            "collision": -200.0,
            "fail_move": -10.0,
            "time": -0.001
        },
        "paths": {
            "gripper_col": "./meshes/gripper_collision_mesh.stl",
            "ring_render": "./meshes/ring_render_mesh.stl",
            "ring_col": "./meshes/ring_collision_mesh.stl"
        },
        "camera": {
            "fov": 60,
            "width": 960,
            "height": 544
        },
        "overview_camera": {
            "width": 320,
            "height": 240
        },
        "curriculum": [
            {
                "pose_range_min": 0.0,
                "pose_range_max": 0.005,
                "obs_noise": 0.0,
                "action_noise": 0.0
            },
            {
                "pose_range_min": 0.005,
                "pose_range_max": 0.02,
                "obs_noise": 0.01,
                "action_noise": 0.01
            },
            {
                "pose_range_min": 0.02,
                "pose_range_max": 0.05,
                "obs_noise": 0.05,
                "action_noise": 0.05
            },
            {
                "pose_range_min": 0.05,
                "pose_range_max": 0.2,
                "obs_noise": 0.05,
                "action_noise": 0.05
            },
            {
                "pose_range_min": 0.2,
                "pose_range_max": 0.5,
                "obs_noise": 0.05,
                "action_noise": 0.05
            },
            {
                "pose_range_min": 0.5,
                "pose_range_max": 1,
                "obs_noise": 0.05,
                "action_noise": 0.05
            }
        ],
        "robot": {
            "verbosity": 0
        }
    },
    "callbacks": {
        "video_recorder": {
            "eval_freq": 100000,
            "n_eval_episodes": 3
        },
        "curriculum_trainer": {
            "check_freq": 20000,
            "success_threshold": 0.8
        },
        "custom_metrics": {
            "window_size": 100
        }
    }
