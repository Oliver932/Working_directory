{
    "training": {
        "total_timesteps": 50000,
        "ppo_policy": "MultiInputPolicy",
        "verbose": 1
    },
    "evaluation": {
        "n_eval_episodes": 100,
        "n_video_episodes": 10,
        "deterministic": true
    },
    "environment": {
        "max_steps": 500,
        "multipliers": {
            "linear": 4.0,
            "rx": 0.5,
            "rz": 0.5
        },
        "ellipse_scale_factor": 0.5,
        "rewards": {
            "success": 1000.0,
            "fail_grip": -30.0,
            "collision": -200.0,
            "fail_move": -10.0,
            "time": -0.001
        },
        "paths": {
            "gripper_col": "./meshes/gripper_collision_mesh.stl",
            "ring_render": "./meshes/ring_render_mesh.stl",
            "ring_col": "./meshes/ring_collision_mesh.stl"
        },
        "camera": {
            "fov": 60,
            "width": 960,
            "height": 544
        },
        "overview_camera": {
            "width": 320,
            "height": 240
        },
        "difficulty": {
            "base_observation_noise": 0.0,
            "max_observation_noise": 0.1,
            "base_action_noise": 0.0,
            "max_action_noise": 0.05
        },
        "robot": {
            "verbosity": 0
        }
    },
    "callbacks": {
        "video_recorder": {
            "eval_freq": 200000,
            "n_eval_episodes": 3
        },
        "curriculum_trainer": {
            "check_freq": 5000,
            "increase_threshold": 0.90,
            "decrease_threshold": 0.80,
            "difficulty_step": 0.005,
            "min_difficulty": 0.15,
            "max_difficulty": 0.8

        },
        "custom_metrics": {
            "window_size": 100
        }
    }
}
